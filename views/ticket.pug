extends layout

block content
  h1 Self Service Helpdesk 
  h2 Ticket Erstellen 
  form.ticketForm(method="POST")
    label(for="firstName") Vorname
    input#firstName(type="text", name='firstName') 
    label(for="lastName") Nachname 
    input#lastName(type="text", name='lastName') 
    each fieldType in additionalFieldTypes
      label(for=`${fieldType.shortName}`) #{fieldType.name}
      if fieldType.type != 'textarea'
        input(id=`${fieldType.shortName}` type=`${fieldType.type}`, name=`${fieldType.shortName}`) 
      else 
        textarea(id=`${fieldType.shortName}` type=`${fieldType.type}`, name=`${fieldType.shortName}`) 
    button(type="submit") Absenden
